<section class="bg-black h-screen overflow-hidden flex justify-center items-center">
    <div class="h-full max-w-lg w-full flex flex-col items-center justify-center gap-2 px-4">
        <h1 class="font-bold text-blue-700 text-4xl font-body select-none">Register</h1>
        <div class="w-full max-w-md p-4 rounded-sm shadow-sm shadow-gray-950">
            {{#if query.error}}
            <div class="w-full bg-red-500 mb-3 rounded-sm">
                <h1 class="text-black font-bold font-semibody py-1 px-2">{{query.error}}</h1>
                <div class="h-1 w-full bg-white rounded-b-[inherit]"></div>
            </div>
            {{/if}}
            <div class="w-full flex flex-col gap-3">
                <form class="flex flex-col gap-3 w-full" id="register-form" action="/auth/register" method="post">
                    <input type="text" name="username" placeholder="Username"
                        class="bg-slate-800 text-slate-300 py-1 px-2 rounded-sm w-full" required autocomplete="off">
                    <input type="password" name="password" placeholder="Password"
                        class="bg-slate-800 text-slate-300 py-1 px-2 rounded-sm w-full" required autocomplete="off">
                    <input type="submit" value="Confirm"
                        class="bg-blue-700 rounded-sm py-1 px-2 cursor-pointer font-semibold font-body text-slate-200 w-full">
                </form>
                <h1 class="text-white text-center text-sm font-body font-medium">Already have an account? <a href="/auth/login" class="text-blue-600 font-semibold font-body">Login</a></h1>
            </div>
        </div>
    </div>
</section>
